@model Category

<form method="post">
    <div class="container">
        <div class="row">
            <div class="input-group my-2">
                <label class="font-weight-bold">Name</label>
            </div>
            <div class="input-group my-2">
                <input value="@Model.Name" name="Name" class="form-control" type="text" placeholder="Name" />
            </div>
        </div>
        <input type="submit" class="btn btn-primary my-2" value="Save" />
        <div >
            <a class="btn btn-success" href="/dashboard/category">Return Index</a>
        </div>
    </div>
</form>



