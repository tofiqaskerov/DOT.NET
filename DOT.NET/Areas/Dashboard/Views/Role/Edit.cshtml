@model Roles

<form method="post">
    <div class="container">
        <div class="row">
            <div class="input-group my-2">
                <label class="font-weight-bold">Role</label>
            </div>
            <div class="input-group my-2">
                <input value="@Model.RoleName" name="RoleName" class="form-control" type="text" placeholder="Role Name" />
            </div>
        </div>
        <input type="submit" class="btn btn-primary my-2" value="Save" />
        <div >
            <a class="btn btn-success" href="/dashboard/role">Return Role</a>
        </div>
    </div>
</form>



