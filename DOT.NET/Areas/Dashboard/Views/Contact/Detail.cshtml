@model Contact

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Details" class="mt-4" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label font-weight-bold">Name</label>
                    <input asp-for="Id" style="color: #000" value="@Model.Name" class="form-control" disabled />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label font-weight-bold">Message</label>
                    <textarea  style="color: #000; "   class="form-control" disabled> @Model.Message</textarea>
                    <span  class="text-danger"></span>
                </div>       
            </form>
        </div>
    </div>

    <div class="mb-4">
        <a class = "btn btn-success" href="/dashboard/contact">Return Index</a>
    </div>
</div>